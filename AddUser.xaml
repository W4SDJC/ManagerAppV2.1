<Window x:Class="ManagerAppV2._1.AddUser"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ManagerAppV2._1"
        mc:Ignorable="d"
        Title="Создание пользователя" Height="260" Width="510" WindowStartupLocation="CenterScreen" SizeToContent="WidthAndHeight" ResizeMode="NoResize">
    <Grid Height="245" Width="510" Margin="0,0,0,0" >
        <Border CornerRadius="45,45,45,45" Margin="24,49,0,0" Width="86" HorizontalAlignment="Left" Height="86" VerticalAlignment="Top" BorderBrush="Black" BorderThickness="3">
            <Border.Background>
                <ImageBrush  ImageSource="/Icons/AppLogo.png" Stretch="Fill" />
            </Border.Background>
        </Border>

        <Label x:Name="LoginLabel" Content="Логин" Margin="128,15,293,204" Padding="5,5,5,0"/>
        <Label x:Name="PasswordLabel" Content="Пароль" HorizontalAlignment="Left" Margin="128,61,0,162" Padding="5,5,5,0"/>
        <Button x:Name="Cancel" Content="Отмена" Background="#FF333333" Foreground="White" Width="80" Height="35" Padding="1,1,1,1" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,20,10" Click="Cancel_Click">
            <Button.Resources>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="CornerRadius" Value="5"/>
                </Style>
            </Button.Resources>
        </Button>
        <Button Content="Сохранить" Background="#FF333333" Foreground="White" Width="80" Height="35" Padding="1,1,1,1" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,105,10" Click="Button_Click">
            <Button.Resources>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="CornerRadius" Value="5"/>
                </Style>
            </Button.Resources>
        </Button>
        <Label x:Name="PasswordLabel1" Content="Подверждение пароля" HorizontalAlignment="Left" Margin="128,109,0,112" Padding="5,5,5,0"/>
        <Label x:Name="NameLabel" Content="Имя" Margin="297,15,125,204" Padding="5,5,5,0"/>
        <Label x:Name="DataBaseNameLabel" Content="Имя таблицы (необязательно)" HorizontalAlignment="Left" Margin="297,61,0,162" Padding="5,5,5,0" ScrollViewer.CanContentScroll="True"/>
        <Label x:Name="RoleLabel" Content="Роль" HorizontalAlignment="Left" Margin="297,109,0,112" Padding="5,5,5,0"/>
        <TextBox x:Name="LoginTextBox" Margin="128,41,218,184" TextWrapping="Wrap" Padding="5,0,0,0" BorderBrush="{DynamicResource {x:Static SystemColors.ActiveBorderBrushKey}}">
            <TextBox.Resources>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="CornerRadius" Value="2"/>
                </Style>
            </TextBox.Resources>
        </TextBox>
        <TextBox x:Name="NameTextBox" Margin="297,41,20,184" TextWrapping="Wrap" Padding="5,0,0,0">
            <TextBox.Resources>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="CornerRadius" Value="2"/>
                </Style>
            </TextBox.Resources>
        </TextBox>
        <TextBox x:Name="PasswordTextBox" Margin="128,83,218,142" TextWrapping="Wrap" Padding="5,0,0,0">
            <TextBox.Resources>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="CornerRadius" Value="2"/>
                </Style>
            </TextBox.Resources>
        </TextBox>
        <TextBox x:Name="DataBaseNameTextBox" Margin="297,83,20,142" TextWrapping="Wrap" Padding="5,0,0,0">
            <TextBox.Resources>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="CornerRadius" Value="2"/>
                </Style>
            </TextBox.Resources>
        </TextBox>
        <TextBox x:Name="ConfirmPasswordTextBox" Margin="128,133,218,92" TextWrapping="Wrap" Padding="5,0,0,0">
            <TextBox.Resources>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="CornerRadius" Value="2"/>
                </Style>
            </TextBox.Resources>
        </TextBox>
        <ComboBox x:Name="RoleComboBox"  HorizontalAlignment="Left" Margin="297,133,0,0" VerticalAlignment="Top" Width="140" Height="20"/>
        <Button x:Name="AddRole" Content="Доб." Background="#FF333333" Foreground="White" Width="48" Height="20" Padding="1,1,1,1" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,20,92" Click="AddRole_Click" >
            <Button.Resources>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="CornerRadius" Value="5"/>
                </Style>
            </Button.Resources>
        </Button>

    </Grid>
</Window>
