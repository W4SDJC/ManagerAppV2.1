<Window x:Class="ManagerAppV2._1.AddWarehouse"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ManagerAppV2._1"
        mc:Ignorable="d"
        Title="Добавление склада" Height="70" Width="365" MinHeight="195" SizeToContent="WidthAndHeight" ResizeMode="NoResize">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto" MinHeight="35"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Label Grid.Row="0" Content="Название склада:" Margin="0,0,0,5"/>
        <TextBox x:Name="txtName" Grid.Row="1" Margin="0,0,0,10"/>

        <Label Grid.Row="2" Content="Адрес склада:" Margin="0,0,0,5"/>
        <TextBox x:Name="txtAddress" Grid.Row="3" Margin="0,0,0,15"/>
        <Button Content="Добавить" Background="#FF333333" Foreground="White" Width="80" Padding="1,1,1,1" HorizontalAlignment="Left" Click="BtnAddWarehouse_Click" Grid.Row="4" Margin="265,0,0,-1" Height="35">
            <Button.Resources>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="CornerRadius" Value="5"/>
                </Style>
            </Button.Resources>
        </Button>
    </Grid>
</Window>