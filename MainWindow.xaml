<Window x:Class="ManagerAppV2._1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ManagerAppV2._1"
        mc:Ignorable="d"
        Title="MainWindow" Height="542" Width="964" MinWidth="830" MinHeight="190" Icon="/Icons/AppIcon.png" WindowStartupLocation="CenterScreen" PreviewMouseDown="Window_PreviewMouseDown">
    <Window.Resources>
        <Style x:Key="PlaceholderTextBox" TargetType="TextBox">
            <Style.Triggers>
                <Trigger Property="Text" Value="">
                    <Setter Property="Background">
                        <Setter.Value>
                            <VisualBrush Stretch="None" AlignmentX="Left">
                                <VisualBrush.Visual>
                                    <TextBlock Text="Login" 
                                           Foreground="Gray"
                                           Margin="15,0,0,0"
                                           VerticalAlignment="Center"/>
                                </VisualBrush.Visual>
                            </VisualBrush>
                        </Setter.Value>
                    </Setter>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>
    <Grid x:Name="MainGrid">
        <Label x:Name="loginLabel" HorizontalAlignment="Left" Margin="170,-35,0,0" VerticalAlignment="Top"/>
        <Grid x:Name="Top" RenderTransformOrigin="0.5,0.5" Background="#FFB3B3B3" Height="50" VerticalAlignment="Top">
            <Grid x:Name="Profile" Margin="0,5,5,5" HorizontalAlignment="Right" Width="140">
                <Rectangle x:Name="ProfileBackgrnd" RadiusX="10" RadiusY="10" Fill="#FF1F7334" HorizontalAlignment="Center" Width="140"/>
                <Label x:Name="NameLabel" VerticalAlignment="Top" Height="15" VerticalContentAlignment="Center" HorizontalContentAlignment="Center"  Padding="0,0,0,0" Margin="40,5,32,0" Foreground="White" FontFamily="Segoe UI Symbol" Content="test"/>
                <Button x:Name="ProfileButton" Foreground="White" BorderThickness="0" Padding="0,0,0,0" Margin="108,5,5,5" HorizontalContentAlignment="Stretch" VerticalContentAlignment="Stretch" Click="ProfileMenu_Click">
                    <Button.Resources>
                        <Style TargetType="{x:Type Border}">
                            <Setter Property="CornerRadius" Value="20"/>
                        </Style>
                    </Button.Resources>
                    <Button.OpacityMask>
                        <ImageBrush ImageSource="/Icons/AccountMore.png"/>
                    </Button.OpacityMask>
                    <Button.Background>
                        <SolidColorBrush Color="#FF333333" Opacity="0"/>
                    </Button.Background>
                    <StackPanel Orientation="Horizontal" Margin="0,0,5,0">
                        <Image Source="/Icons/AccountMore.png" Width="27" Height="30" Margin="0,0,5,0" />
                    </StackPanel>
                </Button>
                <Border CornerRadius="45,45,45,45" Margin="5,5,105,5" Width="30" Height="30">
                    <Border.Background>
                        <ImageBrush  ImageSource="/Icons/Avatar.jpg" Stretch="Fill" />
                    </Border.Background>
                </Border>
                <Label x:Name="RoleLabel" HorizontalAlignment="Left" VerticalAlignment="Top" Height="15" Width="70" HorizontalContentAlignment="Center" ScrollViewer.VerticalScrollBarVisibility="Disabled" Padding="0,0,0,0" Margin="40,20,0,0" FontSize="10" VerticalContentAlignment="Center" Grid.IsSharedSizeScope="True" Foreground="#FFA0ABA3" Content="Admin"/>
            </Grid>
            <Grid x:Name="Search" Height="40" Margin="342,0,405,0">
                <TextBox x:Name="SearchField" TextWrapping="Wrap" Height="40" VerticalContentAlignment="Center" Padding="5,0,5,0">
                    <TextBox.Resources>
                        <Style TargetType="{x:Type Border}">
                            <Setter Property="CornerRadius" Value="8"/>
                        </Style>
                    </TextBox.Resources>
                </TextBox>
                <Image x:Name="SearchFieldimg" Source="/Icons/Search.png" Margin="0,10,10,10" HorizontalAlignment="Right" Width="20"/>
            </Grid>
            <Grid x:Name="SellsPlan" Height="40" Margin="0,0,299,0" VerticalAlignment="Center" HorizontalAlignment="Right" Width="106">
                <Label Content="Sells plan (month)" VerticalAlignment="Top" Height="20" Padding="0,2,0,0" HorizontalContentAlignment="Center" Foreground="#FF757575"/>
                <Label x:Name="MonthPlanLabel" Content="1.000.000" HorizontalAlignment="Center" VerticalAlignment="Top" Height="20" Padding="0,0,0,0" Width="106" HorizontalContentAlignment="Center" Margin="0,20,0,0" Foreground="#FF1E1E1E"/>
            </Grid>
            <Grid x:Name="Sold" Height="40" Margin="0,0,188,0" VerticalAlignment="Center" HorizontalAlignment="Right" Width="106">
                <Label Content="Sold (month)" VerticalAlignment="Top" Height="20" Padding="0,2,0,0" HorizontalContentAlignment="Center" Foreground="#FF757575"/>
                <Label x:Name="SoldedLabel" Content="468.278" HorizontalAlignment="Center" VerticalAlignment="Top" Height="20" Padding="0,0,0,0" Width="106" HorizontalContentAlignment="Center" Margin="0,20,0,0" Foreground="#FFC00F0C"/>
            </Grid>
            <Rectangle x:Name="Separator" Margin="0,0,293,0" Fill="#FF989898" Height="20" VerticalAlignment="Center" HorizontalAlignment="Right" Width="1"/>
            <Grid x:Name="Button" HorizontalAlignment="Left" Margin="5,5,0,5" Width="332">
                <Button x:Name="DatabaseButton" Background="#333333" Foreground="White" BorderThickness="0" Padding="10,5" HorizontalAlignment="Left" Width="115" Click="DatabaseMenuOpen">
                    <Button.Resources>
                        <Style TargetType="{x:Type Border}">
                            <Setter Property="CornerRadius" Value="8"/>
                        </Style>
                    </Button.Resources>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock FontSize="14" VerticalAlignment="Top" Width="62" Text="Database" HorizontalAlignment="Center" Foreground="White" />
                        <Image x:Name="DataBaseBtnimg" Source="/Icons/ArrowDown.png" Width="15" Height="15" Margin="5,3,0,0" />
                    </StackPanel>
                </Button>
                <Button x:Name="UpdateButton" Background="#333333" Foreground="White" BorderThickness="0" Padding="10,5" HorizontalAlignment="Left" Margin="120,0,0,0" Width="91" Click="UpdateButton_Click">
                    <Button.Resources>
                        <Style TargetType="{x:Type Border}">
                            <Setter Property="CornerRadius" Value="8"/>
                        </Style>
                    </Button.Resources>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock FontSize="14" VerticalAlignment="Center" Width="47" HorizontalAlignment="Center" Text="Update" Foreground="White" />
                        <Image Source="/Icons/Refresh.png" Width="15" Height="15" VerticalAlignment="Center" HorizontalAlignment="Center" />
                    </StackPanel>
                </Button>
                <Button x:Name="ManagersButton" Background="#333333" Foreground="White" BorderThickness="0" Padding="10,5" HorizontalAlignment="Left" Margin="216,0,0,0" Width="115" Click="ManagersButton_Click">
                    <Button.Resources>
                        <Style TargetType="{x:Type Border}">
                            <Setter Property="CornerRadius" Value="8"/>
                        </Style>
                    </Button.Resources>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock FontSize="14" VerticalAlignment="Top" Width="62" Text="Managers" HorizontalAlignment="Center" Foreground="White" />
                        <Image Source="/Icons/ArrowDown.png" Width="15" Height="15" Margin="5,3,0,0" />
                    </StackPanel>
                </Button>
            </Grid>
            <Button x:Name="ThemeChangeBtn" Background="#333333" Foreground="White" BorderThickness="0" Margin="0,0,150,0" Height="40" VerticalAlignment="Center" HorizontalAlignment="Right" Width="41" VerticalContentAlignment="Stretch" HorizontalContentAlignment="Stretch">
                <Button.Resources>
                    <Style TargetType="{x:Type Border}">
                        <Setter Property="CornerRadius" Value="20"/>
                    </Style>
                </Button.Resources>
                <StackPanel Height="25" Width="25" VerticalAlignment="Center" HorizontalAlignment="Center" Orientation="Horizontal">
                    <Image Source="/Icons/Moon.png" Width="25" Height="25" VerticalAlignment="Top" />
                </StackPanel>
            </Button>
        </Grid>
        <Grid x:Name="WorkingZone" Margin="0,50,0,0" Background="#FFD9D9D9">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="983*" MinWidth="400"/>
                <ColumnDefinition Width="3"/>
                <ColumnDefinition Width="246*" MaxWidth="350"/>
            </Grid.ColumnDefinitions>
            <Grid x:Name="DatabaseGrid" RenderTransformOrigin="0.5,0.5" Background="#FFD9D9D9">
                <Grid.RowDefinitions>
                    <RowDefinition Height="231*"/>
                    <RowDefinition Height="15*"/>
                </Grid.RowDefinitions>
                <Grid.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform ScaleX="1"/>
                        <SkewTransform/>
                        <RotateTransform/>
                        <TranslateTransform/>
                    </TransformGroup>
                </Grid.RenderTransform>

                <Rectangle x:Name="ProfileBackgrnd_Копировать" Stroke="Black" RadiusX="10" RadiusY="10" Fill="#FF1F7334" Grid.RowSpan="2">
                    <Rectangle.OpacityMask>
                        <ImageBrush/>
                    </Rectangle.OpacityMask>
                </Rectangle>

                <DataGrid x:Name="MainDataGrid" PreviewMouseWheel="DataGrid_PreviewMouseWheel" MouseEnter="DataGrid_MouseEnter" MouseLeave="DataGrid_MouseLeave" BorderBrush="{x:Null}" FontSize="16" Loaded="MainDataGrid_Loaded" Margin="9,0,0,0" Grid.RowSpan="2" >
                    <DataGrid.Resources>
                        <Style TargetType="{x:Type DataGridCell}">
                            <Setter Property="FontSize" Value="{Binding FontSize, ElementName=MainDataGrid}"/>
                        </Style>
                    </DataGrid.Resources>
                </DataGrid>

                <TabControl Grid.Row="0" x:Name="AdminTabControl" Grid.RowSpan="2" SelectionChanged="AdminTabControl_Selected">
                    <DataGrid x:Name="AdminMainDataGrid" PreviewMouseWheel="DataGrid_PreviewMouseWheel" MouseEnter="DataGrid_MouseEnter" MouseLeave="DataGrid_MouseLeave" BorderBrush="{x:Null}" FontSize="16" Loaded="MainDataGrid_Loaded" Height="465" SelectionChanged="AdminMainDataGrid_SelectionChanged" >
                        <DataGrid.Resources>
                            <Style TargetType="{x:Type DataGridCell}">
                                <Setter Property="FontSize" Value="{Binding FontSize, ElementName=AdminMainDataGrid}"/>
                            </Style>
                        </DataGrid.Resources>
                    </DataGrid>
                </TabControl>
                <DockPanel LastChildFill="True" Background="#FF2D2D30" Height="18" Grid.Row="1" VerticalAlignment="Bottom">
                    <TextBlock x:Name="ErrorMarquee" 
               Text="Готов к работе..." 
               Foreground="White"
               VerticalAlignment="Center"
               Margin="5,0">
                        <TextBlock.Triggers>
                            <EventTrigger RoutedEvent="Loaded">
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation
                            Storyboard.TargetProperty="(TextBlock.RenderTransform).(TranslateTransform.X)"
                            From="500" To="-500"
                            Duration="0:0:20"
                            RepeatBehavior="Forever"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                        </TextBlock.Triggers>
                        <TextBlock.RenderTransform>
                            <TranslateTransform x:Name="MarqueeTransform"/>
                        </TextBlock.RenderTransform>
                    </TextBlock>
                </DockPanel>
            </Grid>
            <Grid x:Name="Filter" RenderTransformOrigin="0.5,0.5" Background="#FFD9D9D9" Grid.Column="2">
                <Grid.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform ScaleX="1"/>
                        <SkewTransform/>
                        <RotateTransform/>
                        <TranslateTransform/>
                    </TransformGroup>
                </Grid.RenderTransform>
                <TextBlock x:Name="FilterLabel" Text="Filter" TextAlignment="Center" VerticalAlignment="Top" FontSize="20" FontStyle="Normal" Foreground="#FF757575" HorizontalAlignment="Center"/>
                <Border BorderBrush="Black" BorderThickness="1" Margin="5,27,5,55">
                    <Border.Resources>
                        <Style TargetType="{x:Type Border}">
                            <Setter Property="CornerRadius" Value="5"/>
                        </Style>
                    </Border.Resources>
                    <ScrollViewer x:Name="FilterScrollViewver" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto" >
                        <UniformGrid x:Name="CheckBoxPanel" Columns="1"/>
                    </ScrollViewer>
                </Border>
                <Button x:Name="ApplyFilters" Background="#333333" Foreground="White" BorderThickness="0" Padding="10,5,10,5" Margin="0,0,0,10" Click="ApplyFilterButton_Click" ScrollViewer.CanContentScroll="True" HorizontalAlignment="Center" Width="80" Height="35" VerticalAlignment="Bottom">
                    <Button.Resources>
                        <Style TargetType="{x:Type Border}">
                            <Setter Property="CornerRadius" Value="8"/>
                        </Style>
                    </Button.Resources>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock FontSize="14" VerticalAlignment="Center" Width="41" Text="Apply" Foreground="White" HorizontalAlignment="Center" />
                    </StackPanel>
                </Button>
            </Grid>
            <GridSplitter HorizontalAlignment="Stretch" Background="Black" Grid.Column="1" Height="50">
                <GridSplitter.Resources>
                    <Style TargetType="{x:Type Border}">
                        <Setter Property="CornerRadius" Value="1"/>
                    </Style>
                </GridSplitter.Resources>
            </GridSplitter>
        </Grid>
        <Grid x:Name="DatabaseMenu" HorizontalAlignment="Left" Height="155" Margin="6,45,0,0" VerticalAlignment="Top" Width="115">
            <Rectangle x:Name="DatabaseMenuBackgrnd" Width="115" Fill="#FF101010" RadiusX="10" RadiusY="10"/>
            <!--Buttons-->
            <Button x:Name="NewBtn" Background="#333333" Foreground="White" BorderThickness="0" Padding="0,0,0,0" Margin="5,0,5,125" Width="105" Grid.RowSpan="1" Height="25" VerticalAlignment="Bottom" Click="AddData_Click">
                <Button.Resources>
                    <Style TargetType="{x:Type Border}">
                        <Setter Property="CornerRadius" Value="5"/>
                    </Style>
                </Button.Resources>
                <StackPanel Orientation="Horizontal">
                    <TextBlock FontSize="14" VerticalAlignment="Top" Width="62" Text="New" HorizontalAlignment="Center" Foreground="White" />
                    <Image Source="/Icons/New.png" Width="15" Height="15" />
                </StackPanel>
            </Button>
            <Button x:Name="EditBtn" Background="#333333" Foreground="White" BorderThickness="0" Padding="0,0,0,0" Margin="5,0,5,95" Width="105" Height="25" Grid.RowSpan="1" VerticalAlignment="Bottom" Click="EditBtn_Click">
                <Button.Resources>
                    <Style TargetType="{x:Type Border}">
                        <Setter Property="CornerRadius" Value="5"/>
                    </Style>
                </Button.Resources>
                <StackPanel Orientation="Horizontal">
                    <TextBlock FontSize="14" VerticalAlignment="Top" Width="62" Text="Edit" HorizontalAlignment="Center" Foreground="White" />
                    <Image Source="/Icons/Edit.png" Width="15" Height="15" />
                </StackPanel>
            </Button>
            <Button x:Name="DeleteBtn" Background="#333333" Foreground="White" BorderThickness="0" Padding="0,0,0,0" Margin="5,0,5,65" Width="105" Height="25" VerticalAlignment="Bottom" Click="DeleteBtn_Click">
                <Button.Resources>
                    <Style TargetType="{x:Type Border}">
                        <Setter Property="CornerRadius" Value="5"/>
                    </Style>
                </Button.Resources>
                <StackPanel Orientation="Horizontal">
                    <TextBlock FontSize="14" VerticalAlignment="Top" Width="62" Text="Delete" HorizontalAlignment="Center" Foreground="White" />
                    <Image Source="/Icons/Trash.png" Width="15" Height="15" />
                </StackPanel>
            </Button>
            <Button x:Name="CopyBtn" Background="#333333" Foreground="White" BorderThickness="0" Padding="0,0,0,0" Width="105" Margin="5,0,5,35" Height="25" VerticalAlignment="Bottom"  >
                <Button.Resources>
                    <Style TargetType="{x:Type Border}">
                        <Setter Property="CornerRadius" Value="5"/>
                    </Style>
                </Button.Resources>
                <StackPanel Orientation="Horizontal">
                    <TextBlock FontSize="14" Width="62" Text="Copy" Foreground="White" />
                    <Image Source="/Icons/Copy.png" Width="15" Height="15" />
                </StackPanel>
            </Button>
            <Button x:Name="ExportBtn" Background="#333333" Foreground="White" BorderThickness="0" Padding="0,0,0,0" Margin="5,0,5,5" Width="105" VerticalAlignment="Bottom" Height="25">
                <Button.Resources>
                    <Style TargetType="{x:Type Border}">
                        <Setter Property="CornerRadius" Value="5"/>
                    </Style>
                </Button.Resources>
                <StackPanel Orientation="Horizontal">
                    <TextBlock FontSize="14" VerticalAlignment="Top" Width="62" Text="Export" HorizontalAlignment="Center" Foreground="White" />
                    <Image Source="/Icons/Share.png" Width="15" Height="15" />
                </StackPanel>
            </Button>
        </Grid>
        <Grid x:Name="ProfileMenu" Height="65" Margin="0,45,5,0" VerticalAlignment="Top" HorizontalAlignment="Right" Width="140">
            <Rectangle Fill="#FF1F7334" RadiusX="10" RadiusY="10"/>
            <!--Buttons-->
            <Button x:Name="ProfileBtn" Background="WhiteSmoke" Foreground="White" BorderThickness="0" Padding="0,0,0,0" Grid.RowSpan="1" Margin="5,0,5,35" Click="ProfileBtn_Click" Height="25" VerticalAlignment="Bottom">
                <Button.Resources>
                    <Style TargetType="{x:Type Border}">
                        <Setter Property="CornerRadius" Value="5"/>
                    </Style>
                </Button.Resources>
                <StackPanel Orientation="Horizontal">
                    <TextBlock FontSize="14" VerticalAlignment="Top" Width="45" Text="Profile" Foreground="Black" />
                </StackPanel>
            </Button>
            <Button x:Name="Exit" Background="WhiteSmoke" Foreground="White" BorderThickness="0" Padding="0,0,0,0" Margin="5,0,5,5" Height="25" Grid.RowSpan="1" VerticalAlignment="Bottom" Click="LogOut_Click">
                <Button.Resources>
                    <Style TargetType="{x:Type Border}">
                        <Setter Property="CornerRadius" Value="5"/>
                    </Style>
                </Button.Resources>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <TextBlock x:Name="LogOut" FontSize="14" Width="49" Text="Log out" Foreground="Black" VerticalAlignment="Center" HorizontalAlignment="Center" />
                    <Image Source="/Icons/Log_out.png" Width="15" Height="15" Margin="5,0,0,0" />
                </StackPanel>
            </Button>
        </Grid>
        <Grid x:Name="ManagersMenu" HorizontalAlignment="Left" Height="155" Margin="221,45,0,0" VerticalAlignment="Top" Width="115">
            <Rectangle x:Name="MenuBackgrnd1" Width="115" Fill="#FF101010" RadiusX="10" RadiusY="10"/>
            <!--Buttons-->
            <Button x:Name="AddManagerBtn" Background="#333333" Foreground="White" BorderThickness="0" Padding="0,0,0,0" Margin="5,0,5,125" Width="105" Grid.RowSpan="1" Height="25" VerticalAlignment="Bottom" Click="AddUserBtn_Click">
                <Button.Resources>
                    <Style TargetType="{x:Type Border}">
                        <Setter Property="CornerRadius" Value="5"/>
                    </Style>
                </Button.Resources>
                <StackPanel Orientation="Horizontal">
                    <TextBlock FontSize="14" VerticalAlignment="Top" Width="62" Text="Add" HorizontalAlignment="Center" Foreground="White" />
                    <Image Source="/Icons/New.png" Width="15" Height="15" />
                </StackPanel>
            </Button>
            <Button x:Name="EditBtn1" Background="#333333" Foreground="White" BorderThickness="0" Padding="0,0,0,0" Margin="5,0,5,95" Width="105" Height="25" Grid.RowSpan="1" VerticalAlignment="Bottom">
                <Button.Resources>
                    <Style TargetType="{x:Type Border}">
                        <Setter Property="CornerRadius" Value="5"/>
                    </Style>
                </Button.Resources>
                <StackPanel Orientation="Horizontal">
                    <TextBlock FontSize="14" VerticalAlignment="Top" Width="62" Text="Edit" HorizontalAlignment="Center" Foreground="White" />
                    <Image Source="/Icons/Edit.png" Width="15" Height="15" />
                </StackPanel>
            </Button>
            <Button x:Name="DeleteBtn1" Background="#333333" Foreground="White" BorderThickness="0" Padding="0,0,0,0" Margin="5,0,5,65" Width="105" Height="25" VerticalAlignment="Bottom">
                <Button.Resources>
                    <Style TargetType="{x:Type Border}">
                        <Setter Property="CornerRadius" Value="5"/>
                    </Style>
                </Button.Resources>
                <StackPanel Orientation="Horizontal">
                    <TextBlock FontSize="14" VerticalAlignment="Top" Width="62" Text="Delete" HorizontalAlignment="Center" Foreground="White" />
                    <Image Source="/Icons/Trash.png" Width="15" Height="15" />
                </StackPanel>
            </Button>
            <Button x:Name="CopyBtn1" Background="#333333" Foreground="White" BorderThickness="0" Padding="0,0,0,0" Width="105" Margin="5,0,5,35" Height="25" VerticalAlignment="Bottom"  >
                <Button.Resources>
                    <Style TargetType="{x:Type Border}">
                        <Setter Property="CornerRadius" Value="5"/>
                    </Style>
                </Button.Resources>
                <StackPanel Orientation="Horizontal">
                    <TextBlock FontSize="14" Width="62" Text="Copy" Foreground="White" />
                    <Image Source="/Icons/Copy.png" Width="15" Height="15" />
                </StackPanel>
            </Button>
            <Button x:Name="ExportBtn1" Background="#333333" Foreground="White" BorderThickness="0" Padding="0,0,0,0" Margin="5,0,5,5" Width="105" VerticalAlignment="Bottom" Height="25">
                <Button.Resources>
                    <Style TargetType="{x:Type Border}">
                        <Setter Property="CornerRadius" Value="5"/>
                    </Style>
                </Button.Resources>
                <StackPanel Orientation="Horizontal">
                    <TextBlock FontSize="14" VerticalAlignment="Top" Width="62" Text="Export" HorizontalAlignment="Center" Foreground="White" />
                    <Image Source="/Icons/Share.png" Width="15" Height="15" />
                </StackPanel>
            </Button>
        </Grid>

    </Grid>



</Window>

